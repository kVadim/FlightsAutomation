<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="LogFileAppenderDebug" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="D:\\FlightLogDebug.txt"/>
      <param name="AppendToFile" value="true"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="5MB"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d  %-5p %m%n"/>
      </layout>
    </appender>
      <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="D:\\FlightLog.txt"/>
      <param name="AppendToFile" value="true"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="5MB"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d  %-5p %m%n"/>
      </layout>
       <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO"/>
      </filter>
      <!--<filter type="log4net.Filter.StringMatchFilter">
        <stringToMatch value="Staus" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />-->
    </appender>
    
    <logger name="LOGGER">
      <appender-ref ref="LogFileAppenderDebug"/>
      <appender-ref ref="LogFileAppender"/>
    </logger>
  </log4net>

</configuration>